FROM golang:1.19 AS build-env

ENV GOOS=linux
ENV GOARCH=amd64
ENV CGO_ENABLED=0
ENV GO111MODULE=on
ENV GOPROXY=https://goproxy.cn,direct

WORKDIR /go/src/simulator

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN go build -v -o ./bin/kube-scheduler main.go

FROM alpine:3.14.0

COPY --from=build-env /go/src/simulator/bin/kube-scheduler /bin/kube-scheduler
RUN chmod a+x /bin/kube-scheduler

CMD ["/kube-scheduler"]
